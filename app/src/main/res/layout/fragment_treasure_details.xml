<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_claimed_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_01"
        android:layout_marginTop="@dimen/text_margin_01"
        android:layout_marginEnd="@dimen/text_margin_02"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_claimed_by_label2"
        app:layout_constraintTop_toBottomOf="@+id/tv_prize_points" />

    <TextView
        android:id="@+id/tv_claimed_by_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_02"
        android:layout_marginTop="@dimen/text_margin_01"
        android:text="Claimed by:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_prize_points_label" />

    <TextView
        android:id="@+id/tv_prize_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_01"
        android:layout_marginTop="@dimen/text_margin_01"
        android:layout_marginEnd="@dimen/text_margin_02"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_prize_points_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

    <ImageView
        android:id="@+id/iv_photo_clue"
        android:layout_width="@dimen/treasure_details_match_constraint"
        android:layout_height="@dimen/image_height"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_02"
        android:layout_marginTop="@dimen/text_margin_01"
        android:text="Title:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo_clue" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/text_margin_01"
        android:layout_marginTop="@dimen/text_margin_01"
        android:layout_marginEnd="@dimen/text_margin_02"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_title_label"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo_clue" />

    <TextView
        android:id="@+id/tv_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_02"
        android:layout_marginTop="@dimen/text_margin_01"
        android:text="Description:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_02"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/text_margin_02"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_label" />

    <TextView
        android:id="@+id/tv_created_at_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_02"
        android:layout_marginTop="@dimen/text_margin_01"
        android:text="Created at:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_claimed_by_label2" />

    <TextView
        android:id="@+id/tv_prize_points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_02"
        android:layout_marginTop="@dimen/text_margin_01"
        android:text="Prize Points:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

    <Button
        android:id="@+id/btn_try_claim"
        android:layout_width="@dimen/treasure_details_match_constraint"
        android:layout_height="@dimen/treasure_details_btn_height"
        android:layout_marginStart="@dimen/text_margin_02"
        android:layout_marginTop="@dimen/text_margin_01"
        android:layout_marginEnd="@dimen/text_margin_02"
        android:text="TRY TO CLAIM IT!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_created_at_label" />

    <TextView
        android:id="@+id/tv_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_01"
        android:layout_marginTop="@dimen/text_margin_01"
        android:layout_marginEnd="@dimen/text_margin_02"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_created_at_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_claimed_by" />

</androidx.constraintlayout.widget.ConstraintLayout>
